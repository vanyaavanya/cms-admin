$sidebar-weight = 140px

$main-color = #2D2D2D
$warn-color = #FF5B5B

.navbar
  margin-bottom 0  
.navbar-default
  background-color #FFFFFF
  border-color #F2F2F2
  color $main-color
  .container-fluid
    padding-left 0
  .navbar-brand
    color $main-color
  .navbar-nav
    >li
      >a
        color $main-color
.navbar-toggle.left
  float left
  padding 9px 10px
  margin-left 10px
  background-color rgba(0, 0, 0, 0)
  background-image none
  border 1px solid rgba(0, 0, 0, 0)
  border-radius 4px
.navbar-toggle.visible
  display block

.navbar-form
  input, button.btn-default
    border #F2F2F2

form[role='search']
  .form-control,
  button
    margin-top 2px
    height 30px
    border-radius 6px
    

// WRAPPER
#wrapper
  padding-left 0
  transition all 0.5s ease
  &.toggled
    padding-left $sidebar-weight
    padding-left 0
    #sidebar-wrapper
      width 20px
      .sidebar-nav.short
        width 20px
    #page-content-wrapper
      position relative
      margin-right 0
    #tools-wrapper
      padding-left 20px
    #main-sector
      padding-left 20px

#sidebar-wrapper
  z-index 1000
  position fixed
  left $sidebar-weight
  width 0
  height 100%
  margin-left - $sidebar-weight
  overflow-y auto
  background #fff
  transition all 0.5s ease
  width $sidebar-weight

#page-content-wrapper
  transition all 0.5s ease
  width 100%
  position absolute
  padding 15px
  padding 20px
  position relative

.sidebar-nav
  position absolute
  top 0
  width $sidebar-weight
  margin 0
  padding 0
  list-style none
  li
    text-indent 20px
    line-height 40px
    a
      display block
      text-decoration none
      color #999999
      &:hover
        text-decoration none
        color #5A5A5A
        background #F6F6F6
  & > .sidebar-brand
    height 65px
    font-size 18px
    line-height 60px
    a
      color #999999
      &:hover
        color #fff
        background none
.sidebar-nav li a:active,
.sidebar-nav li a:focus
  text-decoration none

.sidebar-nav 
  transition all 0.5s ease
  overflow hidden
  > .sidebar-brand 
    a:hover 
      color #5A5A5A

.sidebar-nav.short
  transition all 0.5s ease
  width 0
  li
    text-indent 6px

@media(min-width:768px)
  #wrapper
    padding-left $sidebar-weight

.content
  .input-group
    &:hover
      input
        border 1px solid #f2f2f2
        border-radius 4px
      .input-group-addon
        visibility visible
        &:hover
          color $warn-color
          cursor pointer
  .input-group-addon
    background-color transparent
    border 1px #fff 
    visibility hidden
  input, textarea
    width 100%
  input
    display block
    border 1px solid #fff
    margin-bottom 10px
    font-weight 500
    line-height 1.1
    &:focus
      color #5E5E5E
      border 1px solid #f2f2f2
  input#title
    font-size 250%
  input#url
    font-size 100%
  textarea#content
    border 1px solid #fff
    &:focus
      color #5E5E5E
      border 1px solid #f2f2f2
  #content
    min-height 200px
    border-bottom 1px solid #F2F2F2
  .ql-container
    padding 10px 0

    
#main-sector
  transition padding 0.7s ease
  input 
    margin 0
  .input-group
    width 90%
    margin-bottom 10px
  .input-group-addon
    absolute left
    top 50%
    margin-top -13px
    z-index 10
    margin-left -32px
#additional-sector
  input,
  label
    display inline-block
    width auto
  label
    float left
    margin-right 10px
  [type='search']
    border 1px solid #f2f2f2
    padding 2px 6px

label.small
  color #4D4D4D
  margin-bottom 0
  font-weight 200
  font-size 11px

.no-padding
  padding 0

#tools-wrapper
  transition padding 0.5s ease
  padding-bottom 4px
  margin-bottom 10px
  width 100%
  border-bottom 1px solid #F2F2F2
  svg
    display block
    margin  0 auto 40px

footer
  fixed right bottom
  a
    padding 10px
